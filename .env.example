# ðŸ”§ Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Oracle Database Connection
DB_HOST=your_oracle_host_here
DB_PORT=1521
DB_SERVICE=your_service_name_here
DB_USER=your_username_here
DB_PASSWORD=your_password_here

# Database Table
DB_TABLE=V93K_REGRESSION_DAILY

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=localhost
API_PORT=8000
DEBUG=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
VITE_API_BASE_URL=http://localhost:8000

# ===========================================
# ORACLE CLIENT CONFIGURATION
# ===========================================
# Oracle Instant Client Path (adjust for your system)
# macOS Example:
ORACLE_HOME=/opt/oracle/instantclient_21_8
# Linux Example:
# ORACLE_HOME=/usr/lib/oracle/21/client64
# Windows Example:
# ORACLE_HOME=C:\oracle\instantclient_21_8

# ===========================================
# ML MODEL CONFIGURATION
# ===========================================
# Model file paths (relative to project root)
CLASSIFIER_MODEL_PATH=models/issue_classifier.pkl
RECOMMENDER_MODEL_PATH=models/solution_recommender.pkl

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret Key (generate a secure random string)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to false in production
DEV_MODE=true
RELOAD_ON_CHANGE=true

